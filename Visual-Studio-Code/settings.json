{
    "too-long-line-limit.hardLimit": 400,
    "workbench.editor.showTabs": "none",
    "window.title": "‎‎‎‎‎‎‎‎ㅤ",
    "editor.fontSize": 16,
    "window.titleBarStyle": "custom",
    "terminal.integrated.fontSize": 14,
    "editor.fontFamily": "JetBrains Mono",
    "editor.fontLigatures": true,
    "editor.fontWeight": "normal",
    // Cursor Configurations
    "editor.cursorBlinking": "smooth",
    "editor.cursorStyle": "block",
    "editor.hideCursorInOverviewRuler": true,
    "editor.cursorSmoothCaretAnimation": "on",
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.cursorWidth": 0,
    // Icon Configurations
    "workbench.iconTheme": "material-icon-theme",
    "material-icon-theme.opacity": 0.6,
    "material-icon-theme.saturation": 1,
    // File Saving Configuration
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 500,
    "editor.formatOnSave": true,
    // ETC
    "security.workspace.trust.untrustedFiles": "open",
    "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
    "editor.fastScrollSensitivity": 6,
    "workbench.list.smoothScrolling": true,
    "editor.smoothScrolling": true,
    "editor.codeActionsOnSave": {},
    "editor.mouseWheelScrollSensitivity": 3,
    "editor.scrollbar.horizontalScrollbarSize": 5,
    "editor.scrollbar.vertical": "hidden",
    "editor.scrollbar.verticalScrollbarSize": 0,
    "workbench.editor.splitSizing": "split",
    "window.autoDetectHighContrast": false,
    "editor.minimap.enabled": false,
    "workbench.startupEditor": "none",
    "git.openRepositoryInParentFolders": "never",
    "security.workspace.trust.banner": "never",
    "security.workspace.trust.emptyWindow": false,
    "workbench.layoutControl.enabled": false,
    "window.menuBarVisibility": "toggle",
    "editor.suggestLineHeight": 0,
    "python.analysis.autoSearchPaths": false,
    "python.analysis.completeFunctionParens": true,
    "python.analysis.autoFormatStrings": true,
    "editor.lineHeight": 1.54,
    "editor.renderLineHighlight": "gutter",
    "editor.semanticHighlighting.enabled": false,
    "workbench.tree.indent": 21,
    "workbench.list.fastScrollSensitivity": 6,
    "workbench.reduceMotion": "off",
    "workbench.editor.splitOnDragAndDrop": false,
    "editor.trimAutoWhitespace": false,
    "editor.smartSelect.selectLeadingAndTrailingWhitespace": false,
    "breadcrumbs.enabled": false,
    "material-icon-theme.hidesExplorerArrows": true,
    "workbench.activityBar.location": "hidden",
    "material-icon-theme.folders.color": "#90a4ae",
    "extensions.ignoreRecommendations": true,
    "workbench.colorTheme": "One Dark Pro Flat",
    "window.commandCenter": false,
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,
    "files.trimFinalNewlines": true,
    "workbench.statusBar.visible": false,
    "explorer.compactFolders": false,
    "oneDarkPro.italic": false,
    "workbench.tree.renderIndentGuides": "none",
    "editor.guides.indentation": false,
    "editor.rulers": [
        80,
        400
    ],
    "editor.lightbulb.enabled": "off",
    "workbench.editor.editorActionsLocation": "hidden"
}
